<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="martinigt.einfachsparen.DashboardActivity"
    tools:showIn="@layout/activity_dashboard">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="7"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/currentExpensesLabel"
        android:id="@+id/currentExpensesLabel"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/plannedExpensesLabel"
        android:id="@+id/plannedExpensesLabel"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/startingValueDisplay"
        android:id="@+id/currentExpensesDisplay"
        android:layout_row="1"
        android:layout_column="0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorCannotSave"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/startingValueDisplay"
        android:id="@+id/plannedExpensesDisplay"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/budgetLabel"
        android:id="@+id/budgetLabel"
        android:layout_row="2"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/budgetPerDayLabel"
        android:id="@+id/budgetPerDayLabel"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/startingValueDisplay"
        android:id="@+id/budgetDisplay"
        android:layout_row="3"
        android:layout_column="0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorCanSave"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/startingValueDisplay"
        android:id="@+id/budgetPerDayDisplay"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorCanSave"
        android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/remainingDaysLabel"
            android:layout_row="4"
            android:layout_column="0"
            android:id="@+id/remainingDaysLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/approximatedSavingLabel"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:id="@+id/approximatedSavingsLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/startingValueDisplay"
            android:id="@+id/remainingDaysDisplay"
            android:layout_row="5"
            android:layout_column="0"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/startingValueDisplay"
            android:id="@+id/approximatedSavingsDisplay"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorCanSave"
            android:textStyle="bold" />
    </GridLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/lastExpensesListTitle"
        android:id="@+id/expensesListCaption"
        android:layout_marginTop="20dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dashboardExpenseList">

    </ListView>


</LinearLayout >


